#include<windows.h>;
#include<GL/glut.h>;
void plot(void)
{

    glColor3f(1.0,0.0,0.0);
    glPointSize(4);
    glBegin(GL_LINES);
    glVertex2i(2,2);
    glVertex2i(2,50);
    glEnd();
    glBegin(GL_LINES);
    glVertex2i(2,2);
    glVertex2i(70,2);
    glEnd();
    glBegin(GL_LINES);
    glVertex2i(70,2);
    glVertex2i(70,50);
    glEnd();
    glBegin(GL_LINES);
    glVertex2i(70,50);
    glVertex2i(2,50);
    glEnd();
    glFlush();

}
void init(void)

{
    glClearColor(0.0,0.0,0.0,0.0);
    glClear(GL_COLOR_BUFFER_BIT);
    glMatrixMode(GL_PROJECTION);
    glLoadIdentity();
    gluOrtho2D(-100,100,-100,100);

}
int main()
{
    glutInitDisplayMode(GLUT_SINGLE|GLUT_RGB);
    glutInitWindowSize(500,500);
    glutInitWindowPosition(100,100);
    glutCreateWindow("Reactangle");
    init();
    glutDisplayFunc(plot);
    glutMainLoop();

}
